{
  "name": "potdb",
  "version": "2.4.2",
  "description": "a simple text based database for node.js",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build:0": "cross-env NODE_ENV=production webpack --config scripts/webpack.main.prod.config.js",
    "build": "rm -rf build && cross-env NODE_ENV=production tsc -P tsconfig.json --outDir build",
    "test": "rm -rf ./test/tmp/* && ts-mocha --paths test/**/*.test.ts",
    "local": "ts-node local/run.ts",
    "p": "npm run build && npm run test && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oldj/potdb.git"
  },
  "author": "oldj",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oldj/potdb/issues"
  },
  "homepage": "https://github.com/oldj/potdb#readme",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@types/chai": "^4.3.1",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.6",
    "babel-loader": "^8.2.5",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  }
}
